    search: z
      .string()
      .max(100, 'ê²€ìƒ‰ì–´ëŠ” 100ìžë¥¼ ì´ˆê³¼í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤')
      .optional(),
    teacherId: idSchema.optional(),
    minPrice: z
      .string()
      .optional()
      .transform((val) => {
        if (!val || val === '') return undefined;
        const num = parseFloat(val);
        if (isNaN(num) || num < 0) return undefined;
        return num;
      }),
    maxPrice: z
      .string()
      .optional()
      .transform((val) => {
        if (!val || val === '') return undefined;
        const num = parseFloat(val);
        if (isNaN(num) || num < 0) return undefined;
        return num;
      }),
    sortBy: z
      .enum(['createdAt', 'updatedAt', 'title', 'price'])
      .default('createdAt'),
    sortOrder: sortOrderSchema,
  })
  .strict();

