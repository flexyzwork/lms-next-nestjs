  type       ChapterType
  title      String
  content    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  comments   Comment[]
  video      String?

  @@map("chapters")
}

model Comment {
  commentId   String @id // ğŸ†” ì• í”Œë¦¬ì¼€ì´ì…˜ì—ì„œ CUID2 ì§ì ‘ ìƒì„±
  userId      String
