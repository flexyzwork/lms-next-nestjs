  @@id([userId, courseId])
  @@map("user_course_progress")
}


model Course {
  courseId    String    @id // ğŸ†” ì• í”Œë¦¬ì¼€ì´ì…˜ì—ì„œ CUID2 ì§ì ‘ ìƒì„±
  teacherId   String
  teacherName String
  title       String
  description String?
  category    String
  image       String?
  price       Int?
  level       Level
  status      CourseStatus
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // ğŸ”¥ ê´€ê³„ ì„¤ì •
  sections        Section[]
  transactions    Transaction[]
  userCourseProgress UserCourseProgress[]
  enrollments    Enrollment[]
  comments       Comment[]

  @@map("courses")
}

model Section {
  sectionId         String    @id // ğŸ†” ì• í”Œë¦¬ì¼€ì´ì…˜ì—ì„œ CUID2 ì§ì ‘ ìƒì„±
  courseId          String
  course           Course @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  sectionTitle     String
  sectionDescription String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  chapters        Chapter[]

  @@map("sections")
}

model Chapter {
  chapterId  String @id // ğŸ†” ì• í”Œë¦¬ì¼€ì´ì…˜ì—ì„œ CUID2 ì§ì ‘ ìƒì„±
  sectionId  String
